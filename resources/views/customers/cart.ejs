     <% for(recipe of Object.values(session.cart.items)){ %>
    <div id="<%= recipe.item._id %>"  class="shadow-md  max-w-4xl container flex justify-between">             
        <div class="flex gap-5">  
                <p class="font-medium pt-2 text-slate-100 text-3xl"><%= recipe.item.name %>
